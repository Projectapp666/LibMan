<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".help">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/search_bar"

            android:textSize="20sp"
            android:backgroundTint="@color/background"
            android:textColor="@color/heading"
            android:layout_width="300dp"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:gravity="center"
            android:background="@drawable/round_corner"
            android:hint="Search"
            />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="360dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_notifications_fill0_wght400_grad0_opsz48" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_menu_black_24dp"
            app:titleTextColor="@color/heading" />
    </RelativeLayout>
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginTop="?attr/actionBarSize"
       >
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Contact Librarian:"
           android:layout_marginStart="20dp"
           android:layout_marginTop="40dp"
           android:textColor="@color/heading"
           android:textStyle="bold"
           android:textSize="20sp"
           />
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="to: akhilsat.24@gmail.com"
           android:layout_marginStart="20dp"
           android:textColor="@color/heading"
           android:layout_marginTop="10dp"
           android:textSize="15sp"
           />
       <EditText
           android:id="@+id/libEmailContent"
           android:layout_height="100dp"
           android:layout_width="match_parent"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="20dp"
           android:hint="Enter your query here"
           android:gravity="start"

           android:inputType="textMultiLine"

           />
       <Button
           android:id="@+id/btnLibrarian"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:backgroundTint="@color/accent"
           android:text="send"
           android:textColor="@color/white"
           android:drawableRight="@android:drawable/ic_menu_send"
           android:drawableTint="@color/white"
           />

       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="Contact Developers:"
           android:layout_marginStart="20dp"
           android:textColor="@color/heading"
           android:textStyle="bold"
           android:textSize="20sp"
           android:layout_marginTop="50dp"
           />
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="to: ProjectApp666@gmail.com"
           android:layout_marginStart="20dp"
           android:textColor="@color/heading"
           android:layout_marginTop="10dp"
           android:textSize="15sp"
           />
       <EditText
           android:id="@+id/devEmailContent"
           android:layout_height="100dp"
           android:layout_width="match_parent"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="20dp"
           android:hint="Enter your query here"
           android:inputType="textMultiLine"
           android:gravity="start"
           />
       <Button
           android:id="@+id/btnDev"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="20dp"
           android:backgroundTint="@color/accent"
           android:text="send"
           android:textColor="@color/white"
           android:drawableRight="@android:drawable/ic_menu_send"
           android:drawableTint="@color/white"
           />

   </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/my_navigation_items"
        />
</androidx.drawerlayout.widget.DrawerLayout>